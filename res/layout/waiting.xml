<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  >
 <LinearLayout
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   >
  <TextView android:layout_width="fill_parent"
   android:textSize="0.25in"
   android:id="@+id/waiting_textview"
   android:text="Waiting for timer..."
   android:layout_height="wrap_content"
  />
  <Button android:id="@+id/stop_btn" android:textSize="0.15in" android:text="Stop" android:layout_height="wrap_content"
    android:layout_marginLeft="0.5in"
    android:layout_marginRight="0.5in"
    android:layout_marginTop="0.15in"
    android:layout_marginBottom="0.15in"
    android:layout_width="fill_parent" />
  <TextView android:layout_width="fill_parent" android:id="@+id/status_textview" android:layout_height="wrap_content" />
  <TextView android:layout_width="fill_parent" android:id="@+id/count_textview" android:layout_height="wrap_content" />
 </LinearLayout>
</ScrollView>
